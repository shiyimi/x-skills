{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "description": "Example configuration for planning-with-agents skill - Customize as needed",

  "storage": {
    "baseDirectory": ".memory"
  },

  "sub_agents": {
    "enabled": true,

    "triggers": {
      "semantic_matching": {
        "enabled": true,
        "keywords": [
          "微服务架构", "全栈应用", "distributed system"
        ],
        "patterns": [
          "build.*application", "design.*system"
        ]
      },

      "complexity_threshold": {
        "enabled": true,
        "max_phases": 5,
        "estimated_hours": 2,
        "file_count": 10
      },

      "explicit_markers": {
        "enabled": true,
        "markers": ["#use-subagent", "#delegate"]
      }
    }
  },

  "resource_limits": {
    "max_total_agents": 20,
    "max_depth": 5,
    "max_concurrent_agents": 3,
    "single_agent_timeout_minutes": 30,

    "cost_controls": {
      "enabled": true,
      "warning_threshold_usd": 5.0,
      "hard_limit_usd": 10.0
    }
  },

  "observability": {
    "agent_tree_view": {
      "enabled": true
    },
    "execution_log": {
      "enabled": true,
      "level": "INFO"
    },
    "mermaid_diagrams": {
      "enabled": true
    }
  }
}
